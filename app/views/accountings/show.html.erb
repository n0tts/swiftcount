<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @accounting.date %>
</p>

<p>
  <strong>Company:</strong>
  <%= @accounting.company %>
</p>

<p>
  <strong>Tax:</strong>
  <%= @accounting.tax %>
</p>

<p>
  <strong>Employee:</strong>
  <%= @accounting.employee.name %>
</p>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @purchases.each do |purchase| %>
        <tr>
          <td><h4><%= purchase.name %></h4></td>
          <td><h4><%= purchase.category %></h4></td>
          <td><h4><%= purchase.quantity %></h4></td>
          <td><h4><%= number_to_currency(purchase.price) %></h4></td>
          <td><h4><%= link_to "Delete", [@accounting, purchase], method: :delete, confirm: "Are you sure?" %></h4></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<p>
  <strong>Status:</strong>
  <%= @accounting.status_type %>
</p>

<%= link_to 'Edit', edit_accounting_path(@accounting) %> |
<%= link_to 'Back', accountings_path %>

<%= link_to "Add New Item", new_accounting_purchase_path(@accounting), class: 'pull-right' %>