<div class="row">
  <h1>Listing accountings</h1>
  <div class="pull-right range-query">
    <%= form_tag accountings_path, method: :get do %>
      <%= text_field_tag 'search[date_from]', @search.date_from %>
      <%= text_field_tag 'search[date_to]', @search.date_to %>
      <%= submit_tag 'search', class: 'btn search-button' %>
    <% end %>
  </div>
<div>

  <div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Company</th>
      <th>Tax</th>
      <th>Salesperson</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accountings.each do |accounting| %>
      <tr>
        <td><%= accounting.date.strftime("%d-%m-%y") %></td>
        <td><%= accounting.company %></td>
        <td><%= accounting.tax %></td>
        <td><%= accounting.salesperson %></td>
        <td><%= link_to 'Show', accounting, class:'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_accounting_path(accounting), class:'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', accounting, method: :delete, class:'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
<br>

<%= link_to 'New Accounting', new_accounting_path %>
